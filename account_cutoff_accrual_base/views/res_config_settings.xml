<odoo>

  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">accrual.base.account.config.form</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account_cutoff_base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='account_closing_cutoffs']" position="inside">

        <div class="col-xs-12 col-md-12 o_setting_box">
          <div class="o_setting_left_pane">
          </div>
          <div class="o_setting_right_pane">
            <span class="o_form_label">Accruals</span>
            <div class="content-group">
              <div class="row mt16">

                <label for="dft_accrued_revenue_account_id" class="col-md-4 o_light_label"/>
                <field name="dft_accrued_revenue_account_id" options="{'no_create_edit': True, 'no_open': True}"/>
                <label for="dft_accrued_expense_account_id" class="col-md-4 o_light_label"/>
                <field name="dft_accrued_expense_account_id" options="{'no_create_edit': True, 'no_open': True}"/>
                <label for="dft_accrued_revenue_return_account_id" class="col-md-4 o_light_label"/>
                <field name="dft_accrued_revenue_return_account_id" options="{'no_create_edit': True, 'no_open': True}"/>
                <label for="dft_accrued_expense_return_account_id" class="col-md-4 o_light_label"/>
                <field name="dft_accrued_expense_return_account_id" options="{'no_create_edit': True, 'no_open': True}"/>
                <label for="dft_accrual_revenue_journal_id" class="col-md-4 o_light_label"/>
                <field name="dft_accrual_revenue_journal_id" options="{'no_create_edit': True, 'no_open': True}"/>
                <label for="dft_accrual_expense_journal_id" class="col-md-4 o_light_label"/>
                <field name="dft_accrual_expense_journal_id" options="{'no_create_edit': True, 'no_open': True}"/>
                <label for="accrual_taxes" class="col-md-4 o_light_label"/>
                <field name="accrual_taxes" options="{'no_create_edit': True, 'no_open': True}"/>

              </div>
            </div>
          </div>
        </div>

      </xpath>
    </field>
  </record>

</odoo>
