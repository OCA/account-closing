<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">cutoff.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="account_cutoff_base.res_config_settings_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='post_cutoff_move']" position="after">
                <div class="col-12 col-md-12 o_setting_box" id="cutoff_exclude_done">
                    <div class="o_setting_left_pane">
                        <field name="cutoff_exclude_locked_orders" />
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="row" id="cutoff_exclude_locked_orders_label">
                            <label
                                for="cutoff_exclude_locked_orders"
                                class="col-md-5"
                                string="Exclude Locked Orders"
                            />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
