<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="view_move_form" model="ir.ui.view">
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@id='header_left_group']" position="inside">
                    <field
                    name="accrual_move_id"
                    attrs="{'invisible':['|', ('move_type', '=', 'entry'), ('state', '!=', 'draft')]}"
                    groups="account.group_account_user"
                />
                </xpath>
                <xpath expr="//header" position="inside">

                    <field name="accrual_move_to_be_reversed" invisible="1" />
                    <button
                    name="account_invoice_accrual.act_account_move_accrue"
                    string="Accrual"
                    type="action"
                    groups="account.group_account_user"
                    attrs="{'invisible': ['|', '|', ('move_type', '=', 'entry'), ('state','!=','draft'),('accrual_move_id','!=',False)]}"
                />
                    <button
                    name="button_reversal"
                    groups="account.group_account_user"
                    string="Reverse Accrual"
                    type="object"
                    attrs="{'invisible': ['|', '|', ('move_type', '=', 'entry'), ('accrual_move_id','=',False),('accrual_move_to_be_reversed','=',False)]}"
                />
                </xpath>
            </field>
        </record>

</odoo>
