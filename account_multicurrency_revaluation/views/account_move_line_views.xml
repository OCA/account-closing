<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_move_line_form" model="ir.ui.view">
        <field
            name="name"
        >account.move.line.form - account_multicurrency_revaluation</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form" />
        <field
            name="groups_id"
            eval="[(6,0,[ref('account_multicurrency_revaluation.group_revaluation_additional')])]"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_account_id']/.." position="after">
                <group
                    string="Currency Revaluation"
                    name="currency_revaluation"
                    attrs="{'invisible': [('revaluation_origin_line_id', '=', False)]}"
                >
                    <field name="revaluation_origin_line_id" />
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_account_move_line_filter" model="ir.ui.view">
        <field
            name="name"
        >account.move.line.search - account_multicurrency_revaluation</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter" />
        <field
            name="groups_id"
            eval="[(6,0,[ref('account_multicurrency_revaluation.group_revaluation_additional')])]"
        />
        <field name="arch" type="xml">
            <filter name="receivable" position="after">
                <separator />
                <filter
                    name="origin_revaluation"
                    string="Currency Revaluation Items"
                    domain="[('revaluation_origin_line_id', '!=', False)]"
                />
            </filter>
        </field>
    </record>
</odoo>
