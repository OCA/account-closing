<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="general_ledger_wizard" model="ir.ui.view">
        <field name="name">General Ledger</field>
        <field name="model">general.ledger.report.wizard</field>
        <field name="inherit_id" ref="account_financial_report.general_ledger_wizard"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='filters']/group[@name='other_filters']/div[last()]" position="after">
                <label string=" " for="exclude_opening"/>
                <div>
                    <field name="exclude_opening" nolabel="1" class="oe_inline"/>
                    <label for="exclude_opening" class="oe_inline"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
